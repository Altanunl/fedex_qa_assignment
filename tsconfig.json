{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "baseUrl": "http://localhost:4200/",  
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6","dom"],
    "types": ["cypress", "@testing-library/cypress"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
